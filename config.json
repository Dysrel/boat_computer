{
    "settingsFile": "/race/data/settings.json",
    "boatName": "Project Mayhem",
    
    "disabledApps": ["serialGPS"],

    "log:dataDir": "/race/data/logs/",
    
    "dataSources": [
        {
            "name": "garmin gps",
            "path": "/dev/ttyO1",
            "baud": 4800,
            "whitelist": ["PGRME", "GPBOD", "GPBWC"]
        },
        {
            "name": "adafruit gps",
            "path": "/dev/ttyO4",
            "baud": 9600
        }
    ],
    
    "exampleSources": [
        {
            "name": "gps2",
            "path": "/dev/ttyO4",
            "baud": 9600,
            "write": false
        }
    ],

    "production": {
        "port": 80,
        "syncSystemTime": true
    },
    "development": {
         "port": 3000,
         "dataSources": [{
            "name": "replay",
            "driver": "./replayInput",
            "file": "/race/data/logs/14030812.txt"
        }],
        "disabledApps": ["serialGPS", "logs"]
    }
}


