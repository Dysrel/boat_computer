{
    "boatName": "Project Mayhem",

    "settingsFile": "/race/data/settings.json",
    
    "disabledApps": ["tacktick", "goto", "calcs", "polars"],

    "winston:logLevel": "info",
    "winston:logDir": "/race/data/logs/",
    
    "logs:dataDir": "/race/data/raw/",
    
    "dataSources": [
        {
            "name": "Compass",
            "path": "/dev/ttyO2",
            "baud": 4800,
            "whitelist": ["HCHDG","YXXDR","ROT"]
        },
        {
            "name": "Tacktick",
            "path": "/dev/ttyO1",
            "baud": 4800,
            "rateLimit": 1000,
            "whitelist": ["IIMWV","IIVHW","IIVLW","IIVWR","IIMTW","GPRMC","HCHDG","PTAK","IIRMB"]
        },
        {
            "name": "adafruit gps",
            "path": "/dev/ttyO4",
            "baud": 9600,
            "driver": "./mtk3339GPSInput",
            "whitelist": ["GPRMC","GPGGA","GPGSA","GPGSV"]
        }
    ],
    
    "exampleSources": [
        {
            "name": "gps2",
            "path": "/dev/ttyO4",
            "baud": 9600,
            "write": false
        }
    ],

    "production": {
        "port": 80,
        "syncSystemTime": true
    },
    "development": {
         "port": 3000,
         "dataSources": [{
            "name": "replay",
            "driver": "./replayInput",
            "file": "/race/data/raw/14030812.txt"
        }],
        "disabledApps": [],
        "logs:log": false
    }
}


